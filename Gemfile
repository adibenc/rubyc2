source 'https://rubygems.org'

gem 'puma'

# Main gem for Sinatra
gem 'sinatra'
gem 'dotenv'

# JSON parsing gem (required for handling JSON)
gem 'json'
gem 'rerun'

# db
gem 'activerecord'
gem 'sinatra-activerecord'
gem 'mysql2'

# Development and testing gems (optional)
group :development, :test do
  # Testing framework (e.g., for testing your API)
  gem 'rspec'
  gem 'rack-test'
end
